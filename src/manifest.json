{
  "manifest_version": 2,
  "name": "YouTube Video Hider",
  "version": "0.0.0.3",
  "description": "Hide youtube videos and thumbnails",
  "browser_action": {
    "default_icon": "./img/eye.png",
    "default_popup": "./popup.html"
  },
  "web_accessible_resources": [
    "css/hide.css",
    "css/minimize.css",
    "css/invert.css"
  ],
  "author": "Diogo Peres",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "http://www.youtube.com/*"
      ],
      "js": [
        "./js/contentscript.js",
        "./js/hideVideoScript.js",
        "./js/showVideoScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "./js/background.js"
    ],
    "persistent": true
  }
}
